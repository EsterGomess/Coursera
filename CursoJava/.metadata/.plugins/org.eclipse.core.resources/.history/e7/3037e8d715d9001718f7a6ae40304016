
public class Pizza {
	float preco;
	int ningredinetes;
	public void adicionaigrediente (String ingredientes){	
		
	}
	
	public float getPreco(int ningredintes){
		if (ningredintes <=2){
			this.preco = 15;
		}
		if (ningredintes >= 3 || ningredintes <= 5 ){
			this.preco = 20;
		}
		if (ningredintes > 5){
			this.preco = 23;
		}
		return this.preco;
	}
	
}
